{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/fixtures/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@renderer/*": [
        "./src/renderer/src/*",
      ],
      "@fixtures/*": [
        "./src/fixtures/*"
      ]
    }
  }
}
